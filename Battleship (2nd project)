#Game of 1u battleship
from random import randint

board = []

for x in range(5):
    board.append(["O"] * 5)

#Pre: accepts a list of lists
#Post: prints the game board
def print_board(board):
    for row in board:
        print " ".join(row)

print "Battleship!"
print_board(board)

#Pre: accepts a list of lists
#Post: chooses row of ship location
def random_row(board):
    return randint(0, len(board) - 1)

#Pre: accepts a list of lists
#Post: chooses col of ship location
def random_col(board):
    return randint(0, len(board[0]) - 1)

ship_row = random_row(board)
ship_col = random_col(board)
#debug - print ship_row
#debug - print ship_col

for turn in range(4):
    print "Turn", turn + 1
    guess_row = int(raw_input("Guess Row:"))
    guess_col = int(raw_input("Guess Col:"))
    
    if guess_row == ship_row and guess_col == ship_col:
        print "Sunk!"
        break
    else:
        if (guess_row < 0 or guess_row > 4) or (guess_col < 0 or guess_col > 4):
            print "Where even is ocean?"
        elif(board[guess_row][guess_col] == "X"):
            print "Previously guessed"
        else:
            print "Nope!"
            board[guess_row][guess_col] = "X"
        print_board(board)
    if turn == 3:
        print "GaMe OvEr"
